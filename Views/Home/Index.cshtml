@{
    ViewData["Title"] = "Home Page";
}

<h2>Выберите город:</h2>
<form method="get">
    <select name="city">
        <option value="Киев">Киев</option>
        <option value="Львов">Львов</option>
        <option value="Одесса">Одесса</option>
        <option value="Херсон">Херсон</option>
    </select>
    <button type="submit">Показать погоду</button>
</form>

@if (ViewContext.HttpContext.Request.Query.ContainsKey("city"))
{
    var selectedCity = ViewContext.HttpContext.Request.Query["city"].ToString();
    <hr />
    <h3>Текущая погода:</h3>
    @await Component.InvokeAsync("Weather", new { city = selectedCity })
}